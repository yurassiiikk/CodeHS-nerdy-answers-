            /* This program draws a big tower from Karel's starting spot */
            public class BigTowerKarel extends SuperKarel
            {
                public void run()
                {
                    while(notFacingNorth())
                    {
                        turnLeft();
                    }
                    while(frontIsClear())
                    {
                        niggaBalls();
                        doubleMove();
                    }
                    putBall();
                }
                private void doubleMove()
                {
                    move();
                }
                private void niggaBalls()
                {
                    putBall();
                }
            }
